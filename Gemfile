source 'https://rubygems.org'

#Pre defined gems
gem 'rails', '4.2.4'
gem 'sqlite3'
gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.1.0'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 2.0'
gem 'sdoc', '~> 0.4.0', group: :doc

#Custom gems
#Enable bootstrap in application term of visual look n feel
gem 'bootstrap-sass'

#Autoprefixer is a tool to parse CSS and add vendor prefixes to CSS rules. It is related to bootstrap-saas
gem "autoprefixer-rails"

#To manage product image upload and generating thumbnail images
gem 'carrierwave'
gem 'mini_magick'
gem 'graphicsmagick'

#To creating users and functionality for user management
gem 'devise'

#Allow us to choose country from wide varieties of them
gem 'country_select'

group :development, :test do
  #Debugging purpose
  gem 'byebug'
end

group :test do
  #gem 'minitest-rails'
  gem 'factory_girl_rails'
end

group :development do
  gem 'web-console', '~> 2.0'
  gem 'spring'
end