<h1>
  <%= @product.name %>
</h1>

<p>
  <%= number_to_currency @product.price %>
</p>

<p>
  <%= image_tag @product.image, style: 'height:300px;' %>
</p>

<p>
  <%= link_to 'Add to cart', add_cart_path, method: :post, class: 'btn btn-primary' %> |
  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>
</p>