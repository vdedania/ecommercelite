<div class="container">
  <div class="row">
    <div class="col-md-7">
      <div class="well well-sm">
          <%= form_for(@product, multipart: true, :html => {:class => 'form-horizontal'}) do |f| %>
          <fieldset>
            <legend class="text-center"><%= locals[:zone]%></legend>

            <!-- Product Name input-->
            <div class="form-group">
              <label class="col-md-3 control-label" for="name"><%= f.label :name %></label>
              <div class="col-md-9">
                <%= f.text_field :name, class: 'form-control', placehoder: "Product Name" %>
              </div>
            </div>

            <!-- Price input-->
            <div class="form-group">
              <label class="col-md-3 control-label" for="price"><%= f.label :price %></label>
              <div class="col-md-9">
                <%= f.text_field :price, class: 'form-control', placehoder: "Price" %>
              </div>
            </div>

            <!-- Image file uploader -->
            <div class="form-group">
              <label class="col-md-3 control-label" for="message"><%= f.label :image %></label>
              <div class="col-md-9">
                <%= f.file_field :image, class: 'form-control', placehoder: "Price" %>
              </div>
            </div>

            <!-- Product categories -->
            <div class="form-group">
              <label class="col-md-3 control-label" for="message"><%= f.label :category %></label>
              <div class="col-md-9">
                <%= f.select :category_id, Category.all.map { |c| [c.name, c.id] } , {}, { class: 'form-control' }%>
              </div>
            </div>

            <!-- Form actions -->
            <div class="form-group">
              <div class="col-md-12 text-right">
                <%= f.submit 'Save Product', :class => 'btn btn-primary btn-lg' %>
              </div>
            </div>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div style="display: none">
<%= form_for(@product, multipart: true) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>