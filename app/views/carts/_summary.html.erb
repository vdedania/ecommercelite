<div class="col-md-14">
  <div class="table-responsive pull-right">
    <table class="table">
      <tbody>
      <% cart.items.each do |item| %>
          <tr>
            <td>
              <%= link_to (image_tag item.product.image.thumb, style: 'height:80px;width:80px;'), item.product, class: 'thumbnail pull-left' %>
            </td>
            <td>
              <%= link_to item.product.name, item.product %> x <%= label_tag item.quantity %>
              <br/>
              <%= number_to_currency item.price %>
            </td>
          </tr>
      <% end %>
      <tr>
        <td>
          <strong>Total :</strong>
        </td>
        <td>
          <%= number_to_currency cart.total_price %>
        </td>
      </tr>
      </tbody>
    </table>
  </div>
</div>