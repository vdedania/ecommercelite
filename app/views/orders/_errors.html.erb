<% if @order_form.has_errors? %>
    <div class="col-xs-7">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h4 class="panel-title">Please review your form data and correct it.</h4>
        </div>
        <div class="panel-body">
          <% @order_form.user.errors.full_messages.each do |error| %>
              <p>
                <strong>
                  <%= error %>
                </strong>
              </p>
          <% end %>
        </div>
      </div>
    </div>
<% end %>